<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:background="@drawable/backrepeat">
    	
      <ImageView
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:src="@drawable/logo" />
       <Button 
           android:id="@+id/sign_up"
           android:layout_height="wrap_content"
           android:layout_width="80dp" 
           android:layout_marginTop="20dp"
           android:layout_marginLeft="20dp"
           style="@style/btnStyleArsenic"
           android:text="Sign up"/>
      <Button 
           android:id="@+id/sign_in"
           android:layout_height="wrap_content"
           android:layout_width="80dp" 
           android:layout_marginTop="20dp"
           android:layout_marginLeft="5dp"
           style="@style/btnStyleArsenic"
           android:text="Sign in"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="60dp"
    	android:layout_marginTop="100dp"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:orientation="vertical"
    	android:background="@drawable/login_bg">
        <TextView 
             android:layout_width="fill_parent"
    		 android:layout_height="wrap_content"
			 android:text="Create your account" 
			 android:layout_marginTop="15dp"
			 android:layout_marginLeft="50dp"
			 android:textSize="17sp"
			 android:textColor="#000"/>
      </LinearLayout>
      <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="280dp"
    	android:layout_marginTop="160dp"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:orientation="vertical"
    	android:background="@drawable/login_bg2">
       
        <EditText
            android:id="@+id/u_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/backwithborder"
            android:inputType="textEmailAddress"
            android:hint="Name"
            android:textColor="@android:color/black" >
            <requestFocus></requestFocus></EditText>
            <TextView
             android:id="@+id/wrong_uname"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="11sp"
             android:layout_marginLeft="25dp"
             android:textColor="#D00000" />
        <EditText
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/backwithborder"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textColor="@android:color/black" ></EditText>
        <TextView
             android:id="@+id/wrong_email"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="11sp"
             android:layout_marginLeft="25dp"
             android:textColor="#D00000" />
        <EditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:inputType="textPassword"
            android:background="@drawable/backwithborder"
            android:hint="Password"
            android:textColor="@android:color/black" />
        <TextView
             android:id="@+id/wrong_password"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="11sp"
             android:layout_marginLeft="25dp"
             android:textColor="#D00000" />
        <EditText
            android:id="@+id/c_password"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="1dp"
            android:inputType="textPassword"
            android:background="@drawable/backwithborder"
            android:hint="Confirm Password"
            android:textColor="@android:color/black" />
         <TextView
             android:id="@+id/wrong_cpassword"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text=""
             android:textSize="11sp"
             android:layout_marginLeft="25dp"
             android:textColor="#D00000" />
         <Button
             android:id="@+id/signup_submut"
             android:layout_width="fill_parent"
             android:layout_height="40dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="2dp"
             style="@style/btnStyleBeige"
             android:text="Sign up" />
      </LinearLayout>
         
     <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_alignParentBottom="true"
    	android:background="@drawable/backrepeat">
      </LinearLayout>

</RelativeLayout>
